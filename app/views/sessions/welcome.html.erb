<h1 style="color:pink; font-weight:bold;">Welcome to UniOne</h1>
<% if logged_in? %>
    <h1 style="color:pink; font-weight:bold;">You are Logged In, <%= current_user.username %></h1>
    <%= button_to "Create a Unione Group", new_group_path, method: :get %>
    <%# <%= button_to "Create a Character", new_character_path, method: :get %>
    <%# <%= button_to "View Characters", characters_path, method: :get %> 
    <%# <%= button_to "View Uniones", groups_path, method: :get %> 
    <%= button_to "Create a Post", new_post_path, method: :get %>
    <%= button_to "View Your Posts", posts_path, method: :get %>
    <%= button_to "Edit Your Username", edit_user_path(current_user), method: :get %>
    <%= button_to "Log Out", logout_path, method: :delete%>
    <% else %>
    <%= button_to "Sign Up", '/users/new', method: :get%>
    <%= button_to "Login", '/login', method: :get%>

<%end%>

